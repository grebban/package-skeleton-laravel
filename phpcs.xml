<?xml version="1.0"?>
<ruleset name="PSR2">
    <file>src</file>
    <file>database</file>
    <file>config</file>
    <exclude-pattern>vendor</exclude-pattern>

    <description>The PSR2 coding standard with some minor tweaks.</description>
    <rule ref="PSR2" />

    <!--
        Warn about lines longer than 100 chars, and error for lines longer than 120 chars.
    -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="100" />
            <property name="absoluteLineLimit" value="120" />
        </properties>
    </rule>
</ruleset>
