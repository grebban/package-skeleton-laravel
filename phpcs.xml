<?xml version="1.0"?>
<ruleset name="PSR12">
    <file>src</file>
    <file>database</file>
    <file>config</file>
    <exclude-pattern>vendor</exclude-pattern>

    <description>The PSR12 coding standard with some minor tweaks.</description>
    <rule ref="PSR12" />

    <!-- Error for lines longer than 120 chars. -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="absoluteLineLimit" value="120" />
        </properties>
    </rule>
</ruleset>
